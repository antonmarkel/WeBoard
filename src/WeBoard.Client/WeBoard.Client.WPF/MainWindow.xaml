<controls:MetroWindow x:Class="WeBoard.Client.WPF.MainWindow"
                   xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                   xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                   xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
                   xmlns:local="clr-namespace:WeBoard.Client.WPF"
                   Title="WeBoard | Sign up"
                   WindowState="Maximized"
                   WindowStartupLocation="CenterScreen"
                   BorderBrush="Transparent"
                   GlowBrush="Transparent"
                   BorderThickness="0">
    <controls:MetroWindow.Resources>
        <SolidColorBrush x:Key="AccentColorBrush" Color="#CBB994"/>
        <Style x:Key="RoundedAnimatedButton" TargetType="Button" BasedOn="{StaticResource MahApps.Styles.Button}">
            <Setter Property="Background" Value="{DynamicResource AccentColorBrush}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="Height" Value="50"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                CornerRadius="20"
                                RenderTransformOrigin="0.5,0.5"
                                SnapsToDevicePixels="True">
                            <Border.RenderTransform>
                                <ScaleTransform ScaleX="1" ScaleY="1" />
                            </Border.RenderTransform>
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"
                                              RecognizesAccessKey="True"
                                              TextElement.FontSize="22"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="RenderTransform">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="0.95" ScaleY="0.95"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style TargetType="TextBox" BasedOn="{StaticResource MahApps.Styles.TextBox}">
            <Setter Property="BorderBrush" Value="{DynamicResource AccentColorBrush}"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Height" Value="50"/>
            <Setter Property="FontSize" Value="20"/>
        </Style>
    </controls:MetroWindow.Resources>
    <controls:MetroWindow.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#FDF8E8" Offset="0.0"/>
            <GradientStop Color="#F5E1A4" Offset="1.0"/>
        </LinearGradientBrush>
    </controls:MetroWindow.Background>
    <Grid>
        <Canvas IsHitTestVisible="False"
            Panel.ZIndex="1"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch">

            <Polygon Points="0,0 60,100 120,0"
                 Fill="Black"
                 Opacity="0.1"
                 Canvas.Left="187" Canvas.Top="635" HorizontalAlignment="Left" VerticalAlignment="Top">
                <Polygon.RenderTransform>
                    <RotateTransform Angle="40" CenterX="60" CenterY="50"/>
                </Polygon.RenderTransform>
            </Polygon>

            <Rectangle Width="86" Height="92"
                   Fill="Black"
                   Opacity="0.1"
                   Canvas.Left="527" Canvas.Top="688" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="993,682,0,0">
                <Rectangle.RenderTransform>
                    <RotateTransform Angle="25" CenterX="50" CenterY="50"/>
                </Rectangle.RenderTransform>
            </Rectangle>
            <Ellipse Width="98" Height="99"
                 Fill="Chocolate"
                 Opacity="0.1"
                 Canvas.Left="535" Canvas.Top="61" HorizontalAlignment="Left" VerticalAlignment="Top">
                <Ellipse.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform ScaleX="0.99999999999999989" ScaleY="0.99999999999999989"/>
                        <SkewTransform/>
                        <RotateTransform Angle="24.315"/>
                        <TranslateTransform X="-11.884194800935378" Y="14.163031849104174"/>
                    </TransformGroup>
                </Ellipse.RenderTransform>
            </Ellipse>
            <Polygon Points="0,0 60,100 120,0"
            Fill="LightSalmon"
            Opacity="0.1" Canvas.Left="1184" Canvas.Top="155">
                <Polygon.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform ScaleX="0.99999999999999989" ScaleY="0.99999999999999989"/>
                        <SkewTransform/>
                        <RotateTransform Angle="83.851"/>
                        <TranslateTransform X="46.176713897188279" Y="-26.869478737141254"/>
                    </TransformGroup>
                </Polygon.RenderTransform>
            </Polygon>
            <Ellipse Width="105" Height="115"
            Fill="Chocolate"
            Opacity="0.1"
            HorizontalAlignment="Center" VerticalAlignment="Top" Canvas.Left="637" Canvas.Top="638">
                <Ellipse.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform ScaleX="0.99999999999999989" ScaleY="0.99999999999999989"/>
                        <SkewTransform/>
                        <RotateTransform Angle="24.315"/>
                        <TranslateTransform X="-11.884194800935378" Y="14.163031849104174"/>
                    </TransformGroup>
                </Ellipse.RenderTransform>
            </Ellipse>
            <Rectangle Width="68" Height="66"
            Fill="Black"
            Opacity="0.1"
            HorizontalAlignment="Left" VerticalAlignment="Top" Canvas.Left="1012" Canvas.Top="663">
                <Rectangle.RenderTransform>
                    <RotateTransform Angle="25" CenterX="50" CenterY="50"/>
                </Rectangle.RenderTransform>
            </Rectangle>
            <Rectangle Width="68" Height="66"
            Fill="Black"
            Opacity="0.1"
            HorizontalAlignment="Left" VerticalAlignment="Top" Canvas.Left="167" Canvas.Top="178">
                <Rectangle.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform/>
                        <RotateTransform Angle="-28.73"/>
                        <TranslateTransform X="25.815523735202476" Y="-16.44630243886747"/>
                    </TransformGroup>
                </Rectangle.RenderTransform>
            </Rectangle>
            <Image Source="Resources/MainMenu/Cursor.png"
               Width="154"
               Height="115"
               Canvas.Left="901"
               Canvas.Top="231"
               Opacity="0.6">
                <Image.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform/>
                        <RotateTransform Angle="-141.398"/>
                        <TranslateTransform X="7.03" Y="-5.39"/>
                    </TransformGroup>
                </Image.RenderTransform>
            </Image>
            <Image Source="Resources/MainMenu/Cursor.png"
               Width="200"
               Height="107"
               Canvas.Left="877"
               Canvas.Top="251"
               Opacity="0.6">
                <Image.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform/>
                        <RotateTransform Angle="-20.894"/>
                        <TranslateTransform X="7.03" Y="-5.39"/>
                    </TransformGroup>
                </Image.RenderTransform>
            </Image>
        </Canvas>
        <Ellipse Width="800" Height="800"
                 Fill="{DynamicResource AccentColorBrush}"
                 Opacity="0.05"
                 HorizontalAlignment="Center"
                 VerticalAlignment="Center">
            <Ellipse.Effect>
                <BlurEffect Radius="80"/>
            </Ellipse.Effect>
        </Ellipse>
        <TextBlock Text="WeBoard"
                   FontSize="320"
                   FontWeight="Bold"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   Foreground="{DynamicResource AccentColorBrush}"
                   Opacity="0.15"
                   Effect="{DynamicResource MahApps.Styles.DropShadow}"/>
        <StackPanel Width="400"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center">
            <Border CornerRadius="12" Background="White">
                <Border CornerRadius="12"
                        Background="White"
                        BorderBrush="{DynamicResource AccentColorBrush}"
                        BorderThickness="1"
                        ClipToBounds="True">
                    <TextBox controls:TextBoxHelper.Watermark="Nickname"
                             Background="Transparent"
                             BorderThickness="0"
                             Padding="10"
                             Height="50"
                             FontSize="18"
                             Foreground="Black"/>
                </Border>
            </Border>
            <Border CornerRadius="12" Background="White">
                <Border CornerRadius="12"
                        Background="White"
                        BorderBrush="{DynamicResource AccentColorBrush}"
                        BorderThickness="1"
                        ClipToBounds="True">
                    <PasswordBox controls:TextBoxHelper.Watermark="Password"
                             Background="Transparent"
                             BorderThickness="0"
                             Padding="10"
                             Height="50"
                             FontSize="18"
                             Foreground="Black"/>
                </Border>
            </Border>
            <Separator Height="1"
                       Background="{DynamicResource AccentColorBrush}"
                       Margin="0,15"/>
            <Button Style="{StaticResource RoundedAnimatedButton}" Content="Sign Up"/>
        </StackPanel>
        <Button Style="{StaticResource RoundedAnimatedButton}"
                Content="Log In"
                Width="130"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Margin="20"
                Click="LogInButtonClick"/>
    </Grid>
</controls:MetroWindow>