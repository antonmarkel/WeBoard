<controls:MetroWindow x:Class="WeBoard.Client.WPF.LoginWindow"
                   xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                   xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                   xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
                   xmlns:local="clr-namespace:WeBoard.Client.WPF"
                   Title="WeBoard | Log In"
                   WindowState="Maximized"
                   WindowStartupLocation="CenterScreen"
                   BorderBrush="Transparent"
                   GlowBrush="Transparent"
                   BorderThickness="0">
    <controls:MetroWindow.Resources>
        <SolidColorBrush x:Key="AccentColorBrush" Color="#CBB994"/>
        <Style x:Key="RoundedAnimatedButton" TargetType="Button" BasedOn="{StaticResource MahApps.Styles.Button}">
            <Setter Property="Background" Value="{DynamicResource AccentColorBrush}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="Height" Value="50"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                CornerRadius="20"
                                RenderTransformOrigin="0.5,0.5"
                                SnapsToDevicePixels="True">
                            <Border.RenderTransform>
                                <ScaleTransform ScaleX="1" ScaleY="1" />
                            </Border.RenderTransform>
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"
                                              RecognizesAccessKey="True"
                                              TextElement.FontSize="22"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="RenderTransform">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="0.95" ScaleY="0.95"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style TargetType="TextBox" BasedOn="{StaticResource MahApps.Styles.TextBox}">
            <Setter Property="BorderBrush" Value="{DynamicResource AccentColorBrush}"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Height" Value="50"/>
            <Setter Property="FontSize" Value="20"/>
        </Style>
    </controls:MetroWindow.Resources>
    <controls:MetroWindow.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#FDF8E8" Offset="0.0"/>
            <GradientStop Color="#F5E1A4" Offset="1.0"/>
        </LinearGradientBrush>
    </controls:MetroWindow.Background>
    <Grid>
        <TextBlock Text="WeBoard"
                   FontSize="320"
                   FontWeight="Bold"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   Foreground="{DynamicResource AccentColorBrush}"
                   Opacity="0.15"
                   Effect="{DynamicResource MahApps.Styles.DropShadow}"/>
        <StackPanel Width="400"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center">
            <Border CornerRadius="12" Background="White">
                <Border CornerRadius="12"
                        Background="White"
                        BorderBrush="{DynamicResource AccentColorBrush}"
                        BorderThickness="1"
                        ClipToBounds="True">
                    <TextBox controls:TextBoxHelper.Watermark="Username"
                             Background="Transparent"
                             BorderThickness="0"
                             Padding="10"
                             Height="50"
                             FontSize="18"
                             Foreground="Black"/>
                </Border>
            </Border>
            <Border CornerRadius="12" Background="White">
                <Border CornerRadius="12"
                        Background="White"
                        BorderBrush="{DynamicResource AccentColorBrush}"
                        BorderThickness="1"
                        ClipToBounds="True">
                    <PasswordBox controls:TextBoxHelper.Watermark="Password"
                                 Background="Transparent"
                                 BorderThickness="0"
                                 Padding="10"
                                 Height="50"
                                 FontSize="18"
                                 Foreground="Black"/>
                </Border>
            </Border>
            <Separator Height="1"
                       Background="{DynamicResource AccentColorBrush}"
                       Margin="0,15"/>
            <Button Style="{StaticResource RoundedAnimatedButton}" Content="Log In"/>
            <TextBlock Text="Don't have an account?"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       Margin="0,15"/>
            <Button Style="{StaticResource RoundedAnimatedButton}"
                    Content="Sign Up"
                    Width="130"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Click="SignUpButtonClick"/>
        </StackPanel>
    </Grid>
</controls:MetroWindow>
