<controls:MetroWindow x:Class="WeBoard.Client.WPF.LoginWindow"
                   xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                   xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                   xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
                   xmlns:local="clr-namespace:WeBoard.Client.WPF"
                   Title="WeBoard | Log In"
                   WindowState="Maximized"
                   WindowStartupLocation="CenterScreen"
                   BorderBrush="Transparent"
                   GlowBrush="Transparent"
                   BorderThickness="0">
    <controls:MetroWindow.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Resources/Styles/MainDictionaryStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </controls:MetroWindow.Resources>

    <controls:MetroWindow.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#FDF8E8" Offset="0.0"/>
            <GradientStop Color="#F5E1A4" Offset="1.0"/>
        </LinearGradientBrush>
    </controls:MetroWindow.Background>

    <Grid>
        <TextBlock Text="WeBoard"
                   FontSize="320"
                   FontWeight="Bold"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   Foreground="{DynamicResource AccentColorBrush}"
                   Opacity="0.15"
                   Effect="{DynamicResource MahApps.Styles.DropShadow}"/>
        <StackPanel Width="400"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center">
            <Border CornerRadius="12" Background="White">
                <Border CornerRadius="12"
                        Background="White"
                        BorderBrush="{DynamicResource AccentColorBrush}"
                        BorderThickness="1"
                        ClipToBounds="True">
                    <TextBox controls:TextBoxHelper.Watermark="Username"
                             Background="Transparent"
                             BorderThickness="0"
                             Padding="10"
                             Height="50"
                             FontSize="18"
                             Foreground="Black"/>
                </Border>
            </Border>
            <Border CornerRadius="12" Background="White">
                <Border CornerRadius="12"
                        Background="White"
                        BorderBrush="{DynamicResource AccentColorBrush}"
                        BorderThickness="1"
                        ClipToBounds="True">
                    <PasswordBox controls:TextBoxHelper.Watermark="Password"
                                 Background="Transparent"
                                 BorderThickness="0"
                                 Padding="10"
                                 Height="50"
                                 FontSize="18"
                                 Foreground="Black"/>
                </Border>
            </Border>
            <Separator Height="1"
                       Background="{DynamicResource AccentColorBrush}"
                       Margin="0,15"/>
            <Button Style="{StaticResource RoundedAnimatedButton}" Content="Log In"/>
            <TextBlock Text="Don't have an account?"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       Margin="0,15"/>
            <Button Style="{StaticResource RoundedAnimatedButton}"
                    Content="Sign Up"
                    Width="130"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Click="SignUpButtonClick"/>
        </StackPanel>
    </Grid>
</controls:MetroWindow>
